<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBlue">

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/client_bt"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/left_01_03"
                android:gravity="center"
                android:text="客户"
                android:textColor="@color/colorBlue"
                android:textSize="14sp" />

            <Button
                android:id="@+id/staff_bt"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/right_02_03"
                android:text="员工"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/top_1_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/client_1_bt"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/left_02_03"
                android:gravity="center"
                android:text="客户"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <Button
                android:id="@+id/staff_1_bt"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/right_01_03"
                android:text="员工"
                android:textColor="@color/colorBlue"
                android:textSize="14sp" />

        </LinearLayout>



    </RelativeLayout>


    <com.nuoman.westernele.components.NoScrollViewPager
        android:id="@+id/content_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.nuoman.westernele.components.NoScrollViewPager>


</LinearLayout>