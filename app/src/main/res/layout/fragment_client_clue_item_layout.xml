<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:img="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/client_item"
        android:gravity="center_vertical"
        android:paddingRight="30dp">


        <RelativeLayout
            android:id="@+id/relate_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/clue_avatar_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/defaultavatar" />

            <com.nuoman.westernele.components.AvatarImageView
                android:id="@+id/clue_avatar_no_url_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:visibility="gone"
                img:contentBackColor="@color/colorUnComplete"
                img:radius="45dp"
                img:textColor="@android:color/white"
                img:textSize="24sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/relate_layout">

            <TextView
                android:id="@+id/clue_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="霍建华"
                android:textColor="@color/colorListName"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/position_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/clue_name_tv"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/clue_name_tv"
                android:text="经理"
                android:textColor="@color/colorAssist"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/message_iv"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/clue_name_tv"
                android:layout_alignParentRight="true"
                android:src="@drawable/message_03" />

            <ImageView
                android:id="@+id/phone_iv"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/clue_name_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:src="@drawable/phone_03" />


            <TextView
                android:id="@+id/clue_create_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clue_name_tv"
                android:layout_marginTop="10dp"
                android:text="检验入库"
                android:textColor="@color/colorAssist"
                android:textSize="12sp" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>