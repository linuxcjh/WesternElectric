<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".TestMainActivity">

    <EditText
        android:id="@+id/login_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="233dp"
        android:background="@drawable/login_name"
        android:hint="输入账号"
        android:paddingLeft="80dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/login_mac_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_name_tv"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_mac"
        android:paddingLeft="80dp"

        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_mac_tv"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/login_bt"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:background="@drawable/login_bt_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/cancel_bt"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/login_bt_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="30dp" />
    </LinearLayout>


    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_kbv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_name_tv"
        android:layout_below="@+id/login_name_tv"
        android:focusable="true"
        android:padding="17dp"
        android:focusableInTouchMode="true"
        android:visibility="gone" />

</RelativeLayout>
